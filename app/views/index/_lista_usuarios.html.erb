

<section id="alunos">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Alunos Inscritos</h2>
                    <hr class="star-primary">
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12 table-responsive">
                    <table class="table table-hover table-striped table-bordered " >
<tr>
	<th> Matricula </th>
	<th> Nome </th>
	<th> Email </th>
	<th> Curso </th>
	<th> Periodo </th>
	<th> Arquivo </th>
</tr>

<% @users.each do |user| %>
<% if user != current_user %>
<tr>
<td><%= user.matricula %></td>
<td><%= user.nome %></td>
<td><%= user.email %></td>
<td><%= user.curso %></td>
<td><%= user.periodo %></td>
<td> 
<% Arquivo.all.each do |d| %>
<% if d.user_id == user.id %>
<%= link_to "download", {:action => 'download', :controller => 'arquivos', :meuar => d} ,:class => 'btn btn-mini btn-primary' %> 
<% end %>
<% end %>
</td>
<tr>
<%end%>

<% end %>

</table>
                </div>
            </div>
        </div>
        
    </section>